extends base

block content
    main.main
        if reviews 
            .reviews
                if reviews.length
                    each review in reviews
                        .reviews__card(data-review-id=`${review.id}`)
                            .reviews__avatar
                                img.reviews__avatar-img(src=`/img/users/${review.user.photo}`, alt=`${review.user.name}`)
                                h6.reviews__user= review.user.name
                            h4.card__sub-heading.green= review.tour.name
                            p.reviews__text= review.review
                                .reviews__rating
                                    each star in [1, 2, 3, 4, 5]
                                        svg.reviews__star(class=`reviews__star--${review.rating >= star ? 'active' : 'inactive'} `)
                                            use(xlink:href='/img/icons.svg#icon-star')              
                                div.edit
                                    a.edit__icon(href=`/myReviews/${review.id}`)
                                        svg.icon
                                            use(xlink:href='/img/icons.svg#icon-edit')
        else
            .error
                .error__title
                h2.heading-secondary.heading-secondary--error No Reviews Found
